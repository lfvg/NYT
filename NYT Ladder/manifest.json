{

  "manifest_version": 2,
  "name": "NYT Ladder",
  "version": "0.1",

  "description": "NYT Ladder beta",
  
  "permissions": [
    "activeTab"
  ],
  
  "browser_action": {
    "default_icon": "icons/nyt-32.png",	
    "default_title": "NYT Ladder",
    "default_popup": "popup/nyt.html"
  },

  "icons": {
    "48": "icons/nyt-48.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.nytimes.com/*"],
      "js": ["content_scripts/nyt_script.js"]
    }
  ]

}